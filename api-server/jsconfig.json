    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "checkJs": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": [
    "./**/*.d.ts",
    "./**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}