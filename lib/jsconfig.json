{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
    "checkJs": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": [
    "./**/*",
    "./**/*.d.ts",
    "./**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}